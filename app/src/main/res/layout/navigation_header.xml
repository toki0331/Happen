<?xml version="1.0" encoding="utf-8"?>
<merge>
<LinearLayout
    android:orientation="vertical"

    android:background="@drawable/white_gray_bordor_bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/profile"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_exit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_logout"/>
</LinearLayout>

    <TextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="toki furukawa"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="terecaster0331@gmail.com"
        android:textSize="10dp"
        android:layout_marginLeft="30dp"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/followingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="72"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/followingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"/>

        <TextView
            android:id="@+id/followerNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="66"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/followerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"/>

    </LinearLayout>

</LinearLayout>

</merge>