<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.toki.merge_include.Lists_Main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
    <Button
        android:id="@+id/btnclose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_post_close"/>

        <Button
            android:id="@+id/btnhappen"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:layout_marginLeft="200dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_white"
            android:text="Happen?!"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/post_profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:src="@drawable/profile"
            app:civ_border_color="#FF0099"
            app:civ_border_width="1dp" />

        <EditText
            android:id="@+id/post_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What's happening?!"
            android:textSize="20dp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp">
       <ImageView
           android:id="@+id/location"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@drawable/ic_post_location"/>
        <TextView
            android:hint="Gurgaon,India"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <ImageView
            android:src="@drawable/ic_post_addphoto"
            android:layout_marginLeft="40dp"
            android:id="@+id/postPhoto"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="add photo"/>
    </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
